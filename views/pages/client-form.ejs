<div class="page-header">
  <h2><i class="fas fa-user"></i> <%= client ? 'Editar Cliente' : 'Novo Cliente' %></h2>
</div>

<div class="card">
  <form id="clientForm" class="form">
    <% if (client) { %>
      <input type="hidden" name="id" value="<%= client.id %>">
    <% } %>
    
    <div class="form-group">
      <label for="name">Nome</label>
      <input id="name" name="name" value="<%= client?.name || '' %>" required>
    </div>
    
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" value="<%= client?.email || '' %>" required>
    </div>
    
    <div class="form-group">
      <label for="password">Senha</label>
      <input type="password" id="password" name="password" <%= client ? '' : 'required' %>>
      <% if (client) { %>
        <small>Deixe em branco para manter a senha atual</small>
      <% } %>
    </div>
    
    <div class="form-group">
      <label for="role">Cargo</label>
      <select id="role" name="role" required>
        <option value="user" <%= client?.role==='user' ? 'selected' : '' %>>Usu√°rio</option>
        <option value="admin" <%= client?.role==='admin'? 'selected' : '' %>>Administrador</option>
      </select>
    </div>
    
    <div class="form-actions">
      <button type="submit" class="btn-primary"><i class="fas fa-save"></i> Salvar</button>
      <a href="/clients" class="btn-secondary"><i class="fas fa-times"></i> Cancelar</a>
    </div>
    
    <div id="clientMsg" class="form-message"></div>
  </form>
</div>
