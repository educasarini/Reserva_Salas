<h2><%= client ? 'Editar Cliente' : 'Novo Cliente' %></h2>
<form id="clientForm">
  <% if (client) { %>
    <!-- campo oculto com o id -->
    <input type="hidden" name="id" value="<%= client.id %>">
  <% } %>
  <label>Nome:   <input name="name"  value="<%= client?.name || '' %>" required></label><br>
  <label>Email:  <input type="email" name="email" value="<%= client?.email || '' %>" required></label><br>
  <label>Senha:  <input type="password" name="password" required></label><br>
  <label>Cargo:
    <select name="role" required>
      <option value="user"  <%= client?.role==='user' ? 'selected' : '' %>>Usu√°rio</option>
      <option value="admin" <%= client?.role==='admin'? 'selected' : '' %>>Administrador</option>
    </select>
  </label><br>
  <button type="submit"><%= client ? 'Atualizar' : 'Salvar' %></button>
</form>
<div id="clientMsg"></div>
